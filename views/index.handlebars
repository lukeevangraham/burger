<img
  src="https://images.vexels.com/media/users/3/152412/isolated/preview/8b3027fdd6d6135f3a4e695803dc6474-double-cheeseburger-icon-by-vexels.png"
  alt="burger graphic" id="burger">
<h1 class="text-center mb-4">Eat-Da-Burger</h1>


<div class="row">
  <div class="col-md-6">
    <h3>Burgers that have not been devoured!</h3>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-6">
    <h3>Burgers that have been devoured!</h3>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
    <ul>
      {{#each burgers}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h3 class="mt-4">Add a Burger</h3>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

